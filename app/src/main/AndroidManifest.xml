<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="coinbaseclient.eoinahern.ie.coinbase">

    <application
            android:allowBackup="true"
            android:icon="@drawable/coinbase_icon_icon"
            android:label="@string/app_name"
            android:roundIcon="@drawable/coinbase_icon_icon"
            android:supportsRtl="true"
            android:name=".CoinbaseApp"
            android:theme="@style/AppTheme">
        <activity android:name=".ui.view.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ui.view.main.MainActivity"/>

    </application>

</manifest>